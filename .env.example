# MoneyLens Environment Configuration

# API Configuration
ML_API_HOST=0.0.0.0
ML_API_PORT=8000
ML_API_DEBUG=false

# File Upload Configuration
ML_MAX_FILE_SIZE=10485760  # 10MB in bytes
ML_UPLOAD_DIR=/tmp/uploads
ML_ALLOWED_EXTENSIONS=pdf

# PDF Processing Configuration
ML_OCR_ENABLED=true
ML_OCR_LANGUAGE=eng
ML_TEXT_EXTRACTION_TIMEOUT=30

# Database Configuration (for future use)
ML_DATABASE_URL=sqlite:///./moneylens.db

# Web Configuration
ML_WEB_PORT=3000

# Nginx Configuration
ML_NGINX_PORT=80